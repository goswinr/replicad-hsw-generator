{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
        "es2020", "dom"
    ],
    "module":"es2015",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src"
  ],
  "typedocOptions": {
      "watch": true,
      "readme": "none",
      "excludeProtected": true
  }
}

